        "def shopping_cart():\n",
        "    \"\"\"A simple shopping cart program.\"\"\"\n",
        "\n",
        "    cart = {}  # Dictionary to store items and their quantities\n",
        "    total = 0\n",
        "\n",
        "    while True:\n",
        "        print(\"\\nOptions:\")\n",
        "        print(\"1. Add item\")\n",
        "        print(\"2. View cart\")\n",
        "        print(\"3. Checkout\")\n",
        "        print(\"4. Exit\")\n",
        "\n",
        "        choice = input(\"Enter your choice: \")\n",
        "\n",
        "        if choice == \"1\":\n",
        "            item = input(\"Enter item name: \")\n",
        "            try:\n",
        "                quantity = int(input(\"Enter quantity: \"))\n",
        "                price = float(input(\"Enter price per item: \"))\n",
        "\n",
        "                if item in cart:\n",
        "                    cart[item][\"quantity\"] += quantity\n",
        "                else:\n",
        "                    cart[item] = {\"quantity\": quantity, \"price\": price}\n",
        "\n",
        "                print(f\"{quantity} {item}(s) added to cart.\")\n",
        "\n",
        "            except ValueError:\n",
        "                print(\"Invalid input. Please enter a number for quantity and price.\")\n",
        "\n",
        "        elif choice == \"2\":\n",
        "            if not cart:\n",
        "                print(\"Your cart is empty.\")\n",
        "            else:\n",
        "                print(\"\\nShopping Cart:\")\n",
        "                for item, details in cart.items():\n",
        "                    print(f\"{item}: {details['quantity']} x ${details['price']} = ${details['quantity'] * details['price']:.2f}\")\n",
        "\n",
        "        elif choice == \"3\":\n",
        "            if not cart:\n",
        "                print(\"Your cart is empty. Nothing to checkout.\")\n",
        "            else:\n",
        "                print(\"\\nCheckout:\")\n",
        "                total = 0\n",
        "                for item, details in cart.items():\n",
        "                    item_total = details[\"quantity\"] * details[\"price\"]\n",
        "                    print(f\"{item}: {details['quantity']} x ${details['price']} = ${item_total:.2f}\")\n",
        "                    total += item_total\n",
        "                print(f\"Total: ${total:.2f}\")\n",
        "                cart.clear() # clear the cart after checkout\n",
        "                print(\"Thank you for your purchase!\")\n",
        "                break #exit the while loop after checkout.\n",
        "\n",
        "        elif choice == \"4\":\n",
        "            print(\"Exiting...\")\n",
        "            break\n",
        "\n",
        "        else:\n",
        "            print(\"Invalid choice. Please try again.\")\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    shopping_cart()"
      ]
    }
  ]
}